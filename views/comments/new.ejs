<% include ../partials/header %>


<div class="container" style="width:30%;margin:0 auto;">
	<h1>Add Comments to <%= campground.name %></h1>
	<form action="/campground/<%=campground._id%>/comments" method="POST">
		<div class="form-group">
			<label>Author</label>
			<input type="text" name="comment[author]" placeholder="Enter Author" class="form-control">
		</div>
		<div class="form-group">
			<label>Content</label>
			<input type="text" name="comment[content]" placeholder="Enter Content" class="form-control">
		</div>
		<input type="submit" class="btn btn-primary">
	</form>
	<a href="/campground/<%=campground._id%>">go back</a>
</div>
<% include ../partials/footer %>
