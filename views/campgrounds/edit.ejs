<% include ../partials/header %>

<div class="container form-div">
	<h1>Edit Campground form</h1>
	<form action="/campground/<%=campground._id%>/?_method=PUT" method="POST">
		<div class="form-group">
			<label>Name</label>
			<input type="text" name="camp[name]" value="<%=campground.name%>" class="form-control">
		</div>
		<div class="form-group">
			<label>Name</label>
			<input type="text" name="camp[image]" value="<%=campground.image%>" class="form-control">
		</div>
		<div class="form-group">
			<label>Description</label>
			<input type="text" name="camp[description]" value="<%=campground.description%>" class="form-control">
		</div>
		<input type="submit" class="btn btn-primary">
	</form>
	<a href="/campground">go to campgrounds page</a>
</div>

<% include ../partials/footer %>
