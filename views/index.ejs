<% include partials/header %>

<div class="container">
	<div class="jumbotron">
		<div class="container">
			<h1>Welcome To YelpCamp</h1>
			<p>This is our home page</p>
			<a class="btn btn-primary btn-large" href="/campground/new"> Add New Campground</a>
		</div>
	</div>

	 <div class="row">
		<% campground.forEach(function(site){ %>
		<div class="col-md-3 col-sm-6">
			<figure class="figure img-thumbnail">
				<img src="<%= site.image%>" class="figure-img img-fluid rounded">
				<figcaption class="figure-caption text-center">
					<%= site.name %>
					<a href="/campground/<%= site._id%>" class="btn btn-primary">View</a>
				</figcaption>
			</figure>
		</div>
		<% }); %>
	</div> 

</div>

<% include partials/footer %>