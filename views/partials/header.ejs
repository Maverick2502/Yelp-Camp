<!DOCTYPE html>
<html>
  <head>
    <title>YelpCamp</title>
      <!-- Bootstrap core CSS -->
      <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

      <!-- Custom fonts for this template -->
      <link href="https://fonts.googleapis.com/css?family=Varela+Round" rel="stylesheet">
      <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

      <!-- Custom styles for this template -->
      <link href="/stylesheet/grayscale.css" rel="stylesheet">
      <link rel="stylesheet" type="text/css" href="/stylesheet/main.css" >
  </head>
  <body>

		<!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
      <div class="container">
        <a class="navbar-brand js-scroll-trigger" href="/">YELP CAMP</a>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          Menu
          <i class="fas fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
            <% if(!currentUser){ %>
              <li class="nav-item">
                <a class="nav-link js-scroll-trigger" href="/login">Login</a>
              </li>
              <li class="nav-item">
                <a class="nav-link js-scroll-trigger" href="/signup">Signup</a>
              </li>
            <% } else {%>
              <li class="nav-item">
                <a class="nav-link js-scroll-trigger" href="#">Signed In as <%= currentUser.username%></a>
              </li>
              <li class="nav-item">
                <a class="nav-link js-scroll-trigger" href="/logout">Logout</a>
              </li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
      <% if(error && error.length>0){ %>
        <div class="alert alert-danger down-nav">
          <%=error%>
        </div>
      <% } %>
      <% if(success && success.length>0){ %>
        <div class="alert alert-success down-nav">
         <%=success%>
        </div>
      <% } %>
    </div>




